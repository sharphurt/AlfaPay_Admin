<Window x:Class="AlfaPay_Admin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AlfaPay_Admin"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1200"
        Background="White">
    <Window.Resources>
        <ControlTemplate TargetType="Button" x:Key="btTemplate">
            <Border CornerRadius="4" BorderBrush="#600B1F35" BorderThickness="1"
                    Background="#ffffff" Height="{TemplateBinding Height}" Width="{TemplateBinding Width}" >
                <ContentControl FontFamily="Segoe UI" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center" Content="{TemplateBinding Content}" />
            </Border>
        </ControlTemplate>
        <BitmapImage x:Key="SendIcon" UriSource="Resources/send.png"></BitmapImage>
        <BitmapImage x:Key="TickIcon" UriSource="Resources/tick.png"></BitmapImage>
        <BitmapImage x:Key="RejectIcon" UriSource="Resources/reject.png"></BitmapImage>

    </Window.Resources>
    
    
    <Grid ShowGridLines="True" Margin="30">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40 px" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <GroupBox Grid.Column="0" Grid.Row="1" Margin="0,0,5,5">
            <GroupBox.Header>
                <Label FontSize="18" Background="White" FontFamily="Segoe UI" FontWeight="Bold" Padding="10,0,10,10" Margin="0,5,0,0">
                    Информация о клиенте
                </Label>
            </GroupBox.Header>
            
            <Grid ShowGridLines="True" Margin="15,0,15,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="32 px" />
                    <ColumnDefinition Width="150 px" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
            </Grid>
        </GroupBox>
        
        <Grid Grid.Column="0" Row="2" VerticalAlignment="Top" Margin="0,0,6,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            
            <Button Grid.Column="0" Template="{StaticResource btTemplate}" Height="40 px" Margin="0,5,7,0">
                <WrapPanel Orientation="Horizontal">
                    <Image Source="Resources/send.png" Width="32" Height="32"></Image>
                    <Label FontFamily="Segoe UI" FontSize="16" FontWeight="Light">Связаться с клиентом</Label>
                </WrapPanel>
            </Button>
            <Button Grid.Column="1" Template="{StaticResource btTemplate}" Content="Связаться с клиентом"  Height="40 px" Margin="7,5,7,0"/>
            <Button Grid.Column="2" Template="{StaticResource btTemplate}" Content="Связаться с клиентом"  Height="40 px" Margin="7,5,0,0"/>
        </Grid>
    </Grid>
</Window>