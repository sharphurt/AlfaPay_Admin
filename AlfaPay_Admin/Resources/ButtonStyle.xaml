<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ControlTemplate x:Key="ButtonFilledTemplate" TargetType="Button">
        <Grid>
            <Border BorderThickness="0" CornerRadius="6" Background="{TemplateBinding Background}">
                <ContentPresenter  />
            </Border>
        </Grid>
    </ControlTemplate>
    <ControlTemplate x:Key="ButtonOutlinedTemplate" TargetType="Button">
        <Grid>
            <Border x:Name="ButtonBorder" BorderThickness="3" BorderBrush="{TemplateBinding BorderBrush}"
                    CornerRadius="6"
                    Background="{TemplateBinding Background}">
                <AdornerDecorator HorizontalAlignment="Center" VerticalAlignment="Center">
                    <ContentPresenter />
                </AdornerDecorator>
            </Border>
        </Grid>
    </ControlTemplate>

    <Style x:Key="RedButtonStyle" TargetType="Button">
        <Style.Resources>
            <Color x:Key="PrimaryColor" R="242" G="81" B="70" A="255" />
            <Color x:Key="MouseOverColor" R="240" G="50" B="38" A="255" />
            <Color x:Key="MousePressedColor" R="158" G="12" B="0" A="255" />
            <Color x:Key="DisabledColor" R="251" G="204" B="201" A="255" />

            <SolidColorBrush x:Key="PrimaryColorBrush" Color="{StaticResource PrimaryColor}" />
        </Style.Resources>
        <Style.Setters>
            <Setter Property="Background" Value="{StaticResource PrimaryColorBrush}" />
            <Setter Property="Template" Value="{StaticResource ButtonFilledTemplate}" />
        </Style.Setters>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Trigger.EnterActions>
                    <BeginStoryboard>
                        <BeginStoryboard.Storyboard>
                            <Storyboard>
                                <ColorAnimation Storyboard.TargetProperty="(Background).(SolidColorBrush.Color)"
                                                To="{StaticResource MouseOverColor}" Duration="0:0:0.2" />
                            </Storyboard>
                        </BeginStoryboard.Storyboard>
                    </BeginStoryboard>
                </Trigger.EnterActions>
                <Trigger.ExitActions>
                    <BeginStoryboard>
                        <BeginStoryboard.Storyboard>
                            <Storyboard>
                                <ColorAnimation Storyboard.TargetProperty="(Background).(SolidColorBrush.Color)"
                                                From="{StaticResource MouseOverColor}" Duration="0:0:0.2" />
                            </Storyboard>
                        </BeginStoryboard.Storyboard>
                    </BeginStoryboard>
                </Trigger.ExitActions>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Trigger.EnterActions>
                    <BeginStoryboard>
                        <Storyboard>
                            <ColorAnimation Storyboard.TargetProperty="(Background).(SolidColorBrush.Color)"
                                            To="{StaticResource MousePressedColor}"
                                            Duration="0:0:0.2" />
                        </Storyboard>
                    </BeginStoryboard>
                </Trigger.EnterActions>
                <Trigger.ExitActions>
                    <BeginStoryboard>
                        <Storyboard>
                            <ColorAnimation Storyboard.TargetProperty="(Background).(SolidColorBrush.Color)"
                                            From="{StaticResource MousePressedColor}"
                                            Duration="0:0:0.2" />
                        </Storyboard>
                    </BeginStoryboard>
                </Trigger.ExitActions>
            </Trigger>
            <Trigger Property="IsEnabled" Value="false">
                <Trigger.EnterActions>
                    <BeginStoryboard>
                        <Storyboard TargetProperty="Background">
                            <ColorAnimation Storyboard.TargetProperty="(Background).(SolidColorBrush.Color)"
                                            To="{StaticResource DisabledColor}"
                                            Duration="0:0:0.2" />
                        </Storyboard>
                    </BeginStoryboard>
                </Trigger.EnterActions>
                <Trigger.ExitActions>
                    <BeginStoryboard>
                        <Storyboard TargetProperty="Background">
                            <ColorAnimation Storyboard.TargetProperty="(Background).(SolidColorBrush.Color)"
                                            From="{StaticResource DisabledColor}"
                                            Duration="0:0:0.2" />
                        </Storyboard>
                    </BeginStoryboard>
                </Trigger.ExitActions>
            </Trigger>
        </Style.Triggers>
    </Style>


