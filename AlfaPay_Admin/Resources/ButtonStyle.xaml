    <Style x:Key="OutlinedWhiteButtonStyle" TargetType="Button">
        <Style.Resources>
            <Color x:Key="PrimaryBackgroundColor" B="255" G="255" R="255" A="255" />
            <Color x:Key="PrimaryBorderColor" B="255" G="0" R="0" A="90" />
            <Color x:Key="MouseOverBackgroundColor" B="240" G="240" R="240" A="255" />
            <Color x:Key="MouseOverBorderColor" B="0" G="0" R="0" A="255" />
            <Color x:Key="MousePressedColor" B="0" G="0" R="255" A="255" />
            <Color x:Key="DisabledColor" B="0" G="0" R="255" A="255" />

            <SolidColorBrush x:Key="PrimaryBackgroundColorBrush" Color="{StaticResource PrimaryBackgroundColor}" />
            <SolidColorBrush x:Key="PrimaryBorderColorBrush" Color="{StaticResource PrimaryBorderColor}" />

        </Style.Resources>
        <Style.Setters>
            <Setter Property="Background" Value="{StaticResource PrimaryBackgroundColorBrush}" />
            <Setter Property="BorderBrush" Value="{StaticResource PrimaryBorderColorBrush}" />
            <Setter Property="Template" Value="{StaticResource ButtonOutlinedTemplate}" />
        </Style.Setters>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Trigger.EnterActions>
                    <BeginStoryboard>
                        <BeginStoryboard.Storyboard>
                            <Storyboard>
                                <ColorAnimation Storyboard.TargetProperty="(Background).(SolidColorBrush.Color)"
                                                To="{StaticResource MouseOverBackgroundColor}" Duration="0:0:1" />
                                <ColorAnimation Storyboard.TargetProperty="(BorderBrush).(SolidColorBrush.Color)"
                                                To="{StaticResource MouseOverBorderColor}" Duration="0:0:1" />
                            </Storyboard>
                        </BeginStoryboard.Storyboard>
                    </BeginStoryboard>
