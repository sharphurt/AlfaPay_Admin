<UserControl x:Class="AlfaPay_Admin.CustomControl.InputTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:AlfaPay_Admin"
             mc:Ignorable="d"
             Name="InputTextBoxWindow"
             d:DesignHeight="60"
             d:DesignWidth="270">
    <Grid>
        <WrapPanel Orientation="Vertical">
            <Label Style="{DynamicResource SecondaryText}" FontSize="13"
                   Content="{Binding ElementName=InputTextBoxWindow,Path=Header}" />
            <TextBox Style="{DynamicResource InputTextBoxStyle}"
                     Template="{DynamicResource TextBoxControlTemplate}"
                     Width="270 px"
                     Text="123"
                     VerticalContentAlignment="Center" />
        </WrapPanel>
    </Grid>
</UserControl>