<UserControl x:Class="AlfaPay_Admin.CustomControl.InputTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:AlfaPay_Admin"
             mc:Ignorable="d"
             x:Name="InputTextBoxWindow"
             d:DesignHeight="60"
             d:DesignWidth="270"
             Validation.ErrorTemplate="{x:Null}">
    <Grid>
        <WrapPanel Orientation="Vertical">
            <Label Style="{DynamicResource SecondaryText}" FontSize="13"
                   Content="{Binding ElementName=InputTextBoxWindow, Path=Header}" />
            <TextBox Style="{DynamicResource InputTextBoxStyle}"
                     MinWidth="270"
                     Template="{DynamicResource TextBoxControlTemplate}"
                     VerticalContentAlignment="Center"
                     Text="{Binding ElementName=InputTextBoxWindow, Path=Input, ValidatesOnDataErrors=True}">
            </TextBox>
        </WrapPanel>
    </Grid>
</UserControl>