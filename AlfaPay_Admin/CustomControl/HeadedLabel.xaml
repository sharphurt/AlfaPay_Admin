<UserControl x:Class="AlfaPay_Admin.CustomControl.HeadedLabel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:AlfaPay_Admin.CustomControl"
             mc:Ignorable="d"
             x:Name="HeadedLabelWindow"
             d:DesignHeight="60" d:DesignWidth="300">
    <Grid>
        <WrapPanel Orientation="Vertical" HorizontalAlignment="Left">
            <Label Style="{DynamicResource SecondaryHeader}" Padding="0" Content="{Binding ElementName=HeadedLabelWindow, Path=Header}" />
            <Label Style="{DynamicResource PrimaryText}" Padding="0" Margin="0,5,0,0" Content="{Binding ElementName=HeadedLabelWindow, Path=Body}" />
        </WrapPanel>
    </Grid>
</UserControl>