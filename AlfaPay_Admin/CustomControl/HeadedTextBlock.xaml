<UserControl x:Class="AlfaPay_Admin.CustomControl.HeadedTextBlock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:AlfaPay_Admin.CustomControl"
             x:Name="HeadedTextBlockWindow"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <WrapPanel Orientation="Vertical">
            <Label Style="{DynamicResource SecondaryHeader}"
                   Content="{Binding ElementName=HeadedTextBlockWindow, Path=TbHeader}" />
            <Label Style="{DynamicResource PrimaryText}"
                   Content="{Binding ElementName=HeadedTextBlockWindow,Path=TbContent}" />
        </WrapPanel>
    </Grid>
</UserControl>