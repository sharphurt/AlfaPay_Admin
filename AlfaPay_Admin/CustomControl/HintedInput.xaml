<UserControl x:Class="AlfaPay_Admin.CustomControl.HintedInput"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:AlfaPay_Admin.CustomControl"
             mc:Ignorable="d"
             DataContext="{Binding ElementName=SearchTextBox,  Path=Text, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
             x:Name="HintedInputWindow">
    <Grid>
        <TextBox x:Name="SearchTextBox" Style="{StaticResource InputFilledStyle}"
                 FontSize="14"
                 Height="35"
                 Padding="5,1,25,0"
                 Text="{Binding SearchString, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}}"
                 VerticalContentAlignment="Center"
                 TextChanged="SearchTextBox_OnTextChanged"
                 GotFocus="SearchTextBox_OnGotFocus"
                 LostFocus="SearchTextBox_OnLostFocus" />
        <Image Source="{StaticResource SearchIcon}" Width="14" Height="14" Margin="0,0,10,0"
               HorizontalAlignment="Right" />

    </Grid>
</UserControl>