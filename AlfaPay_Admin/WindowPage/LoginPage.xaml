<Page x:Class="AlfaPay_Admin.WindowPage.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:AlfaPay_Admin.WindowPage"
      xmlns:fa="http://schemas.fontawesome.io/icons/"
      xmlns:customControl="clr-namespace:AlfaPay_Admin.CustomControl"
      mc:Ignorable="d"
      Title="LoginPage"
      MinHeight="630"
      MinWidth="1200">
    <Page.Background>
        <ImageBrush ImageSource="{DynamicResource Background}" Stretch="UniformToFill" />
    </Page.Background>
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <WrapPanel Orientation="Vertical" x:Name="MainPanel" Width="340">
            <Label Style="{DynamicResource LightText}" FontSize="32" Foreground="White" Content="Вход" />

            <WrapPanel Orientation="Vertical" Margin="0,35,0,0">
                <Label Style="{DynamicResource SecondaryText}" Foreground="White" FontSize="13" Focusable="True"
                       Content="Логин" />
                <TextBox Style="{DynamicResource InputTextBoxStyle}"
                         x:Name="LoginTextBox"
                         Template="{DynamicResource TextBoxControlTemplate}"
                         VerticalContentAlignment="Center">
                    <Binding Path="Login" UpdateSourceTrigger="PropertyChanged" />
                </TextBox>
            </WrapPanel>
            <WrapPanel Orientation="Vertical" Margin="0,25,0,0">
                <Label Style="{DynamicResource SecondaryText}" Foreground="White" FontSize="13" Focusable="True"
                       Content="Пароль" />
                <TextBox Style="{DynamicResource InputTextBoxStyle}"
                         x:Name="PasswordTextBox"
                         Template="{DynamicResource TextBoxControlTemplate}"
                         VerticalContentAlignment="Center">
                    <Binding Path="Password" UpdateSourceTrigger="PropertyChanged" />
                </TextBox>
            </WrapPanel>

            <TextBlock Style="{DynamicResource ErrorMessageStyleTxtBlock}" HorizontalAlignment="Left"
                       Margin="0,15,0,0"
                       TextWrapping="Wrap" Width="{Binding ElementName=MainPanel, Path=ActualWidth}"
                       Text="{Binding Error.Message}" />

            <Grid Margin="0,35,0,0" Height="50">
                <Button Style="{DynamicResource LoginButtonStyle}"
                        x:Name="LoginButton" Command="{Binding LoginCommand}" Height="50" />
                <Label HorizontalAlignment="Center" Content="Войти" VerticalAlignment="Center"
                       Style="{DynamicResource FadeInFadeOutEffectControl}"
                       IsEnabled="{Binding IsLoading, Converter={StaticResource InvertedBoolConverter}}"
                       Foreground="White" FontFamily="Segoe UI" FontWeight="Light" FontSize="16" />
                <fa:ImageAwesome IsEnabled="{Binding IsLoading}"
                                 Style="{DynamicResource FadeInFadeOutEffectImage}"
                                 Source="{DynamicResource SpinSmallIcon}"
                                 Width="16" Height="16" Spin="True"
                                 SpinDuration="0.8" />
            </Grid>
        </WrapPanel>
    </Grid>
</Page>